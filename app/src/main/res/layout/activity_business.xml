<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl1" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="70dp">
        <Button android:id="@+id/btnBack" android:background="#fff" android:paddingTop="20dp" android:layout_width="50dp" android:layout_height="70dp" android:drawableTop="@drawable/ic_arrow_new_back" style="@style/Widget.AppCompat.Button.Borderless"/>
        <TextView android:textSize="20sp" android:textColor="#000" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/business" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:layout_marginStart="60dp"/>
    </RelativeLayout>
    <TextView android:textSize="20sp" android:textColor="@color/white" android:id="@+id/tv_create" android:background="@drawable/bg_add_business" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:text="@string/create_new_business" android:drawableLeft="@drawable/ic_add_circle_outline_black_24dp" android:drawablePadding="10dp" android:layout_below="@+id/rl1" android:paddingStart="10dp" android:paddingEnd="10dp"/>
    <LinearLayout android:background="@drawable/blue_border_with_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp" android:layout_below="@+id/tv_create">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:overScrollMode="never"/>
    </LinearLayout>
</RelativeLayout>
