<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#ff6701" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rv1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/image" android:background="@drawable/ic_lock_black_24dp" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginTop="40dp" android:layout_centerHorizontal="true"/>
        <ImageView android:background="@drawable/ic_check_circle_black_24dp" android:visibility="gone" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginTop="260dp" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="20dp" android:textColor="#fff" android:id="@+id/topq" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="120dp" android:text="@string/EnterDigiKhataPIN" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/cen" android:layout_width="0dp" android:layout_height="0dp" android:layout_centerHorizontal="true"/>
            <TextView android:id="@+id/two" android:background="@drawable/whiteedge" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginTop="180dp" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/cen"/>
            <TextView android:id="@+id/three" android:background="@drawable/whiteedge" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginTop="180dp" android:layout_marginRight="10dp" android:layout_toRightOf="@+id/cen"/>
            <TextView android:id="@+id/one" android:background="@drawable/whiteedge" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginTop="180dp" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/two"/>
            <TextView android:id="@+id/four" android:background="@drawable/whiteedge" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginTop="180dp" android:layout_marginRight="10dp" android:layout_toRightOf="@+id/three"/>
        </RelativeLayout>
        <EditText android:textSize="32dp" android:gravity="center" android:id="@+id/Passcode" android:background="@drawable/rectangleorange" android:focusable="false" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="40dp" android:layout_marginTop="80dp" android:layout_marginRight="40dp" android:text="" android:maxLength="4" android:layout_below="@+id/topq"/>
    </RelativeLayout>
    <Button android:textColor="#fff" android:id="@+id/Reset" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/ForgotPIN" android:layout_below="@+id/wrong" android:layout_centerHorizontal="true" style="@style/Widget.AppCompat.Button.Borderless"/>
    <TextView android:textSize="18dp" android:textColor="#fff" android:gravity="center" android:id="@+id/wrong" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Wrong passcode. Try again 2 more attempt(s) left" android:layout_below="@+id/rv1"/>
    <RelativeLayout android:background="#ff6701" android:layout_width="match_parent" android:layout_height="270dp" android:layout_alignParentBottom="true">
        <GridLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/rv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:weightSum="3" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:columnCount="3" android:layout_alignParentStart="true" android:layout_alignParentEnd="true">
            <Button android:textSize="32dp" android:textColor="#fff" android:id="@+id/b1" android:background="#ff6701" android:padding="10dp" android:text="1" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="32dp" android:textColor="#fff" android:id="@+id/b2" android:background="#ff6701" android:padding="10dp" android:text="2" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="32dp" android:textColor="#fff" android:id="@+id/b3" android:background="#ff6701" android:padding="10dp" android:text="3" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="32dp" android:textColor="#fff" android:id="@+id/b4" android:background="#ff6701" android:padding="10dp" android:text="4" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="32dp" android:textColor="#fff" android:id="@+id/b5" android:background="#ff6701" android:padding="10dp" android:text="5" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="32dp" android:textColor="#fff" android:id="@+id/b6" android:background="#ff6701" android:padding="10dp" android:text="6" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="32dp" android:textColor="#fff" android:id="@+id/b7" android:background="#ff6701" android:padding="10dp" android:text="7" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="32dp" android:textColor="#fff" android:id="@+id/b8" android:background="#ff6701" android:padding="10dp" android:text="8" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="32dp" android:textColor="#fff" android:id="@+id/b9" android:background="#ff6701" android:padding="10dp" android:text="9" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="32dp" android:textColor="#fff" android:id="@+id/b0" android:background="#ff6701" android:padding="10dp" android:layout_column="1" android:text="0" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="35dp" android:textStyle="bold" android:textColor="#fff" android:background="#ff6701" android:padding="10dp" android:visibility="gone" android:layout_column="2" android:layout_row="3" android:layout_columnWeight="1" style="@style/Widget.AppCompat.Button.Borderless"/>
        </GridLayout>
        <Button android:textColor="#fff" android:id="@+id/bX" android:paddingTop="15dp" android:layout_width="138dp" android:layout_height="62dp" android:drawableTop="@drawable/ic_backspace_white_24dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" style="@style/Widget.AppCompat.Button.Borderless"/>
    </RelativeLayout>
</RelativeLayout>
