<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#fff" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>
    <RelativeLayout android:id="@+id/rl_toolbar" android:background="#fff" android:layout_width="330dp" android:layout_height="70dp" android:layout_margin="2dp" android:layout_marginTop="0dp">
        <Button android:id="@+id/back" android:background="#fff" android:paddingTop="20dp" android:layout_width="50dp" android:layout_height="70dp" android:drawableTop="@drawable/ic_arrow_new_back" android:layout_centerVertical="true" style="@style/Widget.AppCompat.Button.Borderless"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="105dp" android:layout_marginRight="5dp" android:layout_toLeftOf="@+id/call" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <TextView android:textSize="20sp" android:textColor="#000" android:gravity="left" android:id="@+id/txtname" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Name" android:maxLines="1"/>
            <TextView android:textSize="10sp" android:gravity="left" android:id="@+id/txtnumber" android:layout_width="100dp" android:layout_height="wrap_content" android:text="Number"/>
        </LinearLayout>
        <TextView android:textSize="23sp" android:textColor="#000" android:gravity="center" android:id="@+id/txIcon" android:background="@drawable/blackkk" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="55dp" android:text="A" android:layout_centerVertical="true" android:textAllCaps="true"/>
        <Button android:id="@+id/call" android:background="@drawable/ic_call" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/btn" android:layout_below="@+id/rl_toolbar">
        <com.google.android.material.appbar.AppBarLayout android:theme="@style/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" app:elevation="0dp">
            <com.google.android.material.appbar.CollapsingToolbarLayout android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_scrollFlags="exitUntilCollapsed">
                <LinearLayout android:orientation="vertical" android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_collapseMode="none">
                    <RelativeLayout android:id="@+id/r1" android:background="#fff" android:layout_width="match_parent" android:layout_height="70dp" android:layout_marginTop="2dp">
                        <Button android:id="@+id/sms" android:background="@drawable/ic_sms" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <Button android:id="@+id/share" android:background="@drawable/ww" android:layout_width="37dp" android:layout_height="37dp" android:layout_marginRight="70dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <TextView android:textSize="16sp" android:textColor="#000" android:gravity="center" android:id="@+id/txBal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:text="@string/Balance"/>
                        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#ff0000" android:gravity="left" android:id="@+id/txtAmount" android:layout_width="135dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="15dp" android:layout_toRightOf="@+id/txBal"/>
                        <TextView android:textSize="15sp" android:textColor="#000" android:id="@+id/name2" android:visibility="gone" android:layout_width="60dp" android:layout_height="20dp" android:layout_marginLeft="180dp" android:layout_marginTop="20dp"/>
                        <TextView android:textSize="12sp" android:textColor="#808080" android:gravity="bottom" android:id="@+id/ok" android:layout_width="wrap_content" android:layout_height="15dp" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:text="will pay you" android:layout_below="@+id/txBal" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/r2" android:background="#fff" android:visibility="visible" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="2dp" android:layout_below="@+id/r1">
                        <TextView android:textSize="13sp" android:textColor="#000" android:id="@+id/pay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:text="@string/WhenTheyWillPAy" android:layout_centerVertical="true"/>
                        <Button android:textSize="13sp" android:textColor="#0000ee" android:gravity="center" android:id="@+id/datepicker" android:background="@drawable/abb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:text="@string/setDate" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:textAllCaps="false"/>
                        <TextView android:textSize="10sp" android:textColor="#000" android:id="@+id/txtDate" android:layout_width="0dp" android:layout_height="0dp" android:layout_marginTop="10dp" android:text="Set Date" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:textAllCaps="false"/>
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <RelativeLayout android:background="#f2f2f2" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/r2">
                <TextView android:textColor="#000" android:gravity="left" android:id="@+id/date" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:hint="@string/Entries" android:textAllCaps="false"/>
                <TextView android:textColor="#000" android:gravity="right" android:id="@+id/name00" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginLeft="37dp" android:hint="@string/gave" android:layout_toRightOf="@+id/date" android:textAllCaps="true"/>
                <TextView android:gravity="right" android:id="@+id/txYouGa" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginRight="9dp" android:hint="@string/got" android:layout_alignParentRight="true" android:textAllCaps="true"/>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <RelativeLayout android:id="@+id/btn" android:background="#fff" android:layout_width="match_parent" android:layout_height="100dp" android:layout_alignParentBottom="true">
        <TextView android:id="@+id/cen" android:layout_width="0dp" android:layout_height="0dp" android:layout_centerHorizontal="true"/>
        <Button android:textStyle="bold" android:textColor="#fff" android:id="@+id/btngave" android:background="@drawable/buttonlayout" android:layout_width="150dp" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginTop="25dp" android:layout_marginRight="9dp" android:text="@string/gave12" android:layout_toLeftOf="@+id/cen" android:textAllCaps="false"/>
        <Button android:textStyle="bold" android:textColor="#fff" android:id="@+id/btngot" android:background="@drawable/buttongreen" android:layout_width="150dp" android:layout_height="50dp" android:layout_marginLeft="10dp" android:layout_marginTop="25dp" android:layout_marginBottom="10dp" android:text="@string/got12" android:layout_toRightOf="@+id/cen" android:textAllCaps="false"/>
    </RelativeLayout>
</RelativeLayout>
