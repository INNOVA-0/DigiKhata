<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/mRe" android:background="#f2f2f2" android:clickable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
    <RelativeLayout android:id="@+id/fullRv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/fullImage" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="65dp" android:layout_marginBottom="20dp"/>
        <Button android:textSize="30dp" android:textColor="#fff" android:gravity="center" android:id="@+id/fullButton" android:background="@drawable/redcoss" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="15dp" android:layout_marginBottom="5dp" android:text="X" android:layout_alignParentRight="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/title" android:layout_width="match_parent" android:layout_height="70dp">
        <Button android:id="@+id/back" android:paddingTop="20dp" android:layout_width="50dp" android:layout_height="70dp" android:drawableTop="@drawable/ic_backred" style="@style/Widget.AppCompat.Button.Borderless"/>
        <TextView android:textSize="20sp" android:textColor="#b30000" android:id="@+id/txtHead" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="You gave" android:maxLines="2" android:layout_toRightOf="@+id/back" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center" android:id="@+id/body" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/title">
        <RelativeLayout android:id="@+id/rl_amount" android:background="@drawable/textviewroundcorner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
            <EditText android:textSize="20sp" android:textColor="#b30000" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/edtAmount" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="50dp" android:hint="0" android:layout_toLeftOf="@+id/clear" android:layout_toRightOf="@+id/tv_rs"/>
            <TextView android:textSize="20sp" android:textColor="#b30000" android:gravity="center" android:id="@+id/tv_rs" android:paddingLeft="5dp" android:layout_width="50dp" android:layout_height="50dp" android:text="Rs."/>
            <ImageButton android:id="@+id/clear" android:background="@android:color/transparent" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_keyboard_backspace_black_24dp" android:layout_alignParentRight="true"/>
            <RelativeLayout android:id="@+id/rl_history" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/edtAmount">
                <View android:id="@+id/view1" android:background="#e4e4e4" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="15dp" android:layout_marginTop="1dp" android:layout_marginRight="15dp"/>
                <RelativeLayout android:id="@+id/rlH" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="3dp" android:layout_marginRight="15dp" android:layout_marginBottom="3dp" android:layout_below="@+id/view1">
                    <TextView android:textSize="12sp" android:id="@+id/tv_history" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="history" android:maxLines="2" android:layout_toLeftOf="@+id/tvEqual" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                    <TextView android:id="@+id/tvEqual" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="=" android:layout_toLeftOf="@+id/tv_result"/>
                    <TextView android:textSize="12sp" android:textColor="#000000" android:id="@+id/tv_result" android:layout_width="80dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:hint="result" android:maxLines="1" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView android:textStyle="bold" android:textColor="#f10404" android:gravity="center" android:id="@+id/tvInvalid" android:background="#ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:text="Invalid Amount" android:layout_below="@+id/view1" android:layout_alignTop="@+id/rlH" android:layout_alignBottom="@+id/rlH"/>
            </RelativeLayout>
        </RelativeLayout>
        <EditText android:enabled="true" android:textSize="14sp" android:gravity="left" android:id="@+id/edtDetail" android:background="@drawable/textviewroundcorner" android:padding="10dp" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:hint="@string/Details" android:maxLines="4" android:layout_below="@+id/rl_amount"/>
        <Button android:id="@+id/btnDate" android:background="@drawable/ic_date_red" android:visibility="visible" android:clickable="true" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_below="@+id/edtDetail"/>
        <TextView android:textSize="15dp" android:textColor="#b30000" android:gravity="center_vertical" android:id="@+id/txtdate" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="25dp" android:layout_marginLeft="5dp" android:layout_marginTop="15dp" android:layout_toRightOf="@+id/btnDate" android:layout_below="@+id/edtDetail"/>
        <Button android:id="@+id/picture" android:paddingTop="20dp" android:visibility="visible" android:layout_width="70dp" android:layout_height="75dp" android:layout_marginRight="5dp" android:drawableTop="@drawable/ic_camera_red" android:layout_below="@+id/edtDetail" android:layout_alignParentRight="true" style="@style/Widget.AppCompat.Button.Borderless"/>
        <RelativeLayout android:id="@+id/rl_img" android:visibility="invisible" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginTop="20dp" android:layout_toLeftOf="@+id/picture" android:layout_below="@+id/edtDetail">
            <ImageView android:id="@+id/imageView" android:clickable="true" android:layout_width="50dp" android:layout_height="50dp" android:layout_centerInParent="true"/>
            <ImageButton android:id="@+id/ib_remove_image" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_cancel_black_24dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <Button android:textSize="20dp" android:textStyle="bold" android:textColor="#ffff" android:id="@+id/btnsave" android:background="@drawable/buttonlayout" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" android:text="@string/save" android:layout_below="@+id/rl_img"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/linear_calculator" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:baselineAligned="false" android:layout_below="@+id/body">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <Button android:textSize="18sp" android:id="@+id/btn_clear" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="C" android:layout_weight="1"/>
                <Button android:textSize="22sp" android:id="@+id/btn_divide" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="รท" android:layout_weight="1"/>
                <Button android:textSize="22sp" android:id="@+id/btn_multiply" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="ร" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <Button android:textSize="18sp" android:id="@+id/btn_7" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="7" android:layout_weight="1"/>
                <Button android:textSize="18sp" android:id="@+id/btn_8" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="8" android:layout_weight="1"/>
                <Button android:textSize="18sp" android:id="@+id/btn_9" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="9" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <Button android:textSize="18sp" android:id="@+id/btn_4" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="4" android:layout_weight="1"/>
                <Button android:textSize="18sp" android:id="@+id/btn_5" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="5" android:layout_weight="1"/>
                <Button android:textSize="18sp" android:id="@+id/btn_6" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="6" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <Button android:textSize="18sp" android:id="@+id/btn_1" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="1" android:layout_weight="1"/>
                <Button android:textSize="18sp" android:id="@+id/btn_2" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="2" android:layout_weight="1"/>
                <Button android:textSize="18sp" android:id="@+id/btn_3" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="3" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <Button android:textSize="18sp" android:id="@+id/btn_0" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="0" android:layout_weight="2"/>
                <Button android:textSize="18sp" android:id="@+id/btn_dot" android:background="@drawable/bg_calculator_buttons" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="3dp" android:text="ยท" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageButton android:textSize="22sp" android:id="@+id/btn_back" android:background="@drawable/bg_calculator_buttons" android:layout_width="match_parent" android:layout_height="0dp" android:layout_margin="3dp" android:src="@drawable/ic_backspace_black_24dp" android:layout_weight="1"/>
            <Button android:textSize="18sp" android:id="@+id/btn_minus" android:background="@drawable/bg_calculator_buttons" android:layout_width="match_parent" android:layout_height="0dp" android:layout_margin="3dp" android:text="โ" android:layout_weight="1"/>
            <Button android:textSize="18sp" android:id="@+id/btn_plus" android:background="@drawable/bg_calculator_buttons" android:layout_width="match_parent" android:layout_height="0dp" android:layout_margin="3dp" android:text="+" android:layout_weight="1"/>
            <Button android:textSize="18sp" android:id="@+id/btn_equal" android:background="@drawable/bg_cal_equal_button" android:layout_width="match_parent" android:layout_height="0dp" android:layout_margin="3dp" android:text="=" android:layout_weight="2"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
