<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/signin_btn_bg" android:paddingLeft="10dp" android:paddingTop="20dp" android:paddingRight="10dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/linLay" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#535353" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DELETE" android:maxLines="1"/>
        <View android:layout_gravity="center_horizontal" android:background="#535353" android:visibility="visible" android:layout_width="120dp" android:layout_height="2dp" android:layout_marginTop="4dp"/>
        <TextView android:textSize="16sp" android:textColor="#eb0707" android:id="@+id/tvMsg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="You are going to delete this business.\10Are you sure?" android:textAlignment="center"/>
        <TextView android:textSize="16sp" android:textColor="#696969" android:id="@+id/tv_b" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="To delete, type &apos;business&apos; and press the delete button:" android:textAlignment="center"/>
        <EditText android:id="@+id/etName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
    </LinearLayout>
    <Button android:enabled="false" android:textSize="14sp" android:textColor="@color/colorPrimary" android:id="@+id/btnDelete" android:background="@drawable/bg_delete" android:layout_width="150dp" android:layout_height="30dp" android:layout_marginTop="10dp" android:text="DELETE" android:layout_below="@+id/linLay" android:layout_centerHorizontal="true" android:textAllCaps="false"/>
</RelativeLayout>
