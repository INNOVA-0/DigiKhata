<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/fullRv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/fullImage" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="65dp" android:layout_marginBottom="20dp"/>
        <Button android:textSize="30dp" android:textColor="#fff" android:gravity="center" android:id="@+id/fullButton" android:background="@drawable/redcoss" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="15dp" android:layout_marginBottom="5dp" android:text="X" android:layout_alignParentRight="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/body" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="70dp">
            <Button android:id="@+id/back" android:paddingTop="20dp" android:layout_width="50dp" android:layout_height="70dp" android:drawableTop="@drawable/ic_backred" style="@style/Widget.AppCompat.Button.Borderless"/>
            <TextView android:textSize="20dp" android:textColor="#b30000" android:gravity="center_vertical" android:id="@+id/txTop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="60dp" android:layout_marginTop="20dp" android:layout_marginRight="15dp" android:text="You gave" android:maxLines="2"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="70dp">
            <TextView android:textSize="20sp" android:textColor="#b30000" android:gravity="left" android:background="@drawable/textviewroundcorner" android:paddingLeft="25dp" android:paddingTop="10dp" android:layout_width="75dp" android:layout_height="50dp" android:layout_marginLeft="15dp" android:layout_marginTop="20dp" android:text="Rs."/>
            <Button android:id="@+id/clear" android:background="@drawable/ic_keyboard_backspace_black_24dp" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginTop="33dp" android:layout_marginRight="25dp" android:layout_alignParentRight="true"/>
            <EditText android:textSize="20dp" android:textColor="#b30000" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/edamount" android:background="@drawable/textviewroundcorner" android:paddingRight="60dp" android:focusable="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="80dp" android:layout_marginTop="20dp" android:layout_marginRight="15dp" android:cursorVisible="true" android:maxLength="8" android:inputType="number"/>
            <EditText android:enabled="true" android:textSize="14sp" android:gravity="left" android:id="@+id/note" android:background="@drawable/textviewroundcorner" android:padding="10dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:hint="@string/Details" android:maxLines="4" android:layout_below="@+id/edamount"/>
            <Button android:id="@+id/camera" android:paddingTop="20dp" android:layout_width="70dp" android:layout_height="75dp" android:layout_marginRight="5dp" android:drawableTop="@drawable/ic_camera_red" android:layout_below="@+id/note" android:layout_alignParentRight="true" style="@style/Widget.AppCompat.Button.Borderless"/>
            <RelativeLayout android:id="@+id/rl_img" android:visibility="invisible" android:layout_width="70dp" android:layout_height="70dp" android:layout_marginTop="20dp" android:layout_marginRight="70dp" android:layout_below="@+id/note" android:layout_alignParentRight="true">
                <ImageView android:id="@+id/imgVV" android:clickable="true" android:layout_width="50dp" android:layout_height="50dp" android:layout_centerInParent="true"/>
                <ImageButton android:id="@+id/ib_remove_image" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_cancel_black_24dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            </RelativeLayout>
            <Button android:id="@+id/calender" android:background="@drawable/ic_date_red" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_below="@+id/note"/>
            <TextView android:textSize="15dp" android:textColor="#b30000" android:gravity="center_vertical" android:id="@+id/txDate" android:clickable="true" android:layout_width="wrap_content" android:layout_height="25dp" android:layout_marginLeft="5dp" android:layout_marginTop="15dp" android:layout_toRightOf="@+id/calender" android:layout_below="@+id/note"/>
            <Button android:textSize="20dp" android:textStyle="bold" android:textColor="#ffff" android:id="@+id/btSave" android:background="@drawable/buttonlayout" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:text="@string/save" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
