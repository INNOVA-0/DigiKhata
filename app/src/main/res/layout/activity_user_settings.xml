<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/statusbar" android:background="#fff" android:layout_width="match_parent" android:layout_height="70dp">
        <Button android:id="@+id/back" android:background="#fff" android:paddingTop="20dp" android:layout_width="50dp" android:layout_height="70dp" android:drawableTop="@drawable/ic_arrow_new_back" android:layout_centerVertical="true" style="@style/Widget.AppCompat.Button.Borderless"/>
        <TextView android:textSize="20dp" android:textColor="#000" android:id="@+id/heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginTop="20dp" android:text="@string/customerProfile" android:layout_centerVertical="true"/>
        <Button android:textColor="#007399" android:id="@+id/update" android:background="@drawable/abb" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginRight="20dp" android:text="@string/save" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="0dp" android:layout_below="@+id/statusbar">
        <TextView android:id="@+id/round" android:background="@drawable/ic_account_box_black_24dp" android:visibility="gone" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginTop="10dp" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="20dp" android:textStyle="bold" android:gravity="center" android:id="@+id/name" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/Name" android:layout_below="@+id/round" android:layout_centerHorizontal="true"/>
        <EditText android:id="@+id/edName" android:background="#fff" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="30dp" android:layout_marginTop="10dp" android:layout_marginRight="30dp" android:layout_below="@+id/name"/>
        <TextView android:textSize="20dp" android:textStyle="bold" android:gravity="center" android:id="@+id/phone" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:text="@string/Phone" android:layout_below="@+id/name" android:layout_centerHorizontal="true"/>
        <EditText android:id="@+id/edPhone" android:background="#fff" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="30dp" android:layout_marginTop="10dp" android:layout_marginRight="30dp" android:layout_below="@+id/phone" android:inputType="phone"/>
        <TextView android:textSize="20dp" android:textStyle="bold" android:gravity="center" android:id="@+id/address" android:visibility="gone" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:text="Address" android:layout_below="@+id/phone" android:layout_centerHorizontal="true"/>
        <EditText android:background="#fff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="30dp" android:layout_marginTop="10dp" android:layout_marginRight="30dp" android:layout_below="@+id/address"/>
        <TextView android:textSize="20dp" android:textStyle="bold" android:gravity="center" android:id="@+id/trans" android:visibility="gone" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:text="Transaction Sharing" android:layout_below="@+id/address" android:layout_centerHorizontal="true"/>
        <TextView android:textStyle="bold" android:id="@+id/info" android:visibility="gone" android:layout_width="220dp" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="10dp" android:text="Share with user in entries of you" android:layout_below="@+id/trans"/>
        <Switch android:visibility="gone" android:layout_width="80dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="40dp" android:textOn="Enabled" android:textOff="Disabled" android:layout_below="@+id/trans" android:layout_alignParentRight="true"/>
        <Switch android:id="@+id/switchNote" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="30dp" android:layout_below="@+id/edPhone" android:layout_alignParentRight="true"/>
        <TextView android:id="@+id/line" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="12dp" android:text="@string/sendSms" android:layout_below="@+id/edPhone"/>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="70dp" android:layout_alignParentBottom="true"/>
    <Button android:textColor="#fff" android:gravity="center" android:id="@+id/delete" android:background="#b30000" android:paddingLeft="40dp" android:layout_width="match_parent" android:layout_height="60dp" android:text="@string/DeletenSettle" android:drawableLeft="@drawable/ic_delete_24dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>
