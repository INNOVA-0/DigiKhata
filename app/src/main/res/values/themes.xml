<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DigiKhata" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/orange</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="background">@drawable/action_bar_item_background</item>
    </style>

    <style name="toolbar_text_appearance">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ActionItem">
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="android:drawablePadding">@dimen/size_24dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_16dp</item>

    </style>

    <style name="ContactsTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/size_18dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="buttonBackground" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_views</item>
    </style>
</resources>